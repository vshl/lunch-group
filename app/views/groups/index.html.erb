<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Leader</th>
      <th>Group Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.leader.name %></td>
        <td><%= group.employees.map(&:name).join(',') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag create_groups_path, method: :post do %>
  <%= submit_tag 'Create Groups' %>
<% end %>
<%= link_to 'RSVP List', 'events#index' %>
